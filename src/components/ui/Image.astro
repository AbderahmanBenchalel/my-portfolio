---
export interface Props{
  src:string,
  radius?:string
}

const {src="",radius="12px"} = Astro.props as Props;
---

<picture style=`border-radius: ${radius};`>
  <img src={src} alt="">
</picture>

<style>
  picture{
    display: flex;
    overflow: hidden;
  }
  img{
    width: 100%;
  }
</style>