---
export interface Props{
  src:string,
  radius?:string,
  height?:string
}

const {src="",radius="12px",height=""} = Astro.props as Props;
---

<picture style=`border-radius: ${radius}; height: ${height};`>
  <img src={src} alt="" style=`border-radius: ${radius};`/>
</picture>

<style>
  picture{
    display: flex;
    overflow: hidden;
  }
  img{
    width: 100%;
    margin: auto;

  }
</style>