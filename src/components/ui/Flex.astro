---
export interface Props{
  justify?:string,
  align?:string,
  gap?:string,
  wrap?:string,
  Element?:string,
  direction?:string,
  marginBottom?:string
}

const {align='', gap='', wrap='', justify='', Element='div',direction='row', marginBottom='' } = Astro.props as Props;
---

<Element class="flex" style=`align-items: ${align}; gap: ${gap}; flex-wrap: ${wrap}; justify-content: ${justify}; flex-direction: ${direction}; margin-bottom: ${marginBottom}; `>
  <slot/>
</Element>

<style>
  .flex{
    display: flex;
  }
</style>