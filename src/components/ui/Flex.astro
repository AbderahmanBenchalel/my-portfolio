---
export interface Props{
  justify?:string,
  align?:string,
  gap?:string,
  wrap?:string,
}

const {align='', gap='', wrap='', justify=''} = Astro.props as Props;
---

<div class="flex" style=`align-items: ${align}; gap: ${gap}; flex-wrap: ${wrap}; justify-content: ${justify}; `>
  <slot/>
</div>

<style>
  .flex{
    display: flex;
  }
</style>