---
import Container from "./ui/Container.astro";
import Flex from "./ui/Flex.astro";
import Image from "./ui/Image.astro";
import projectImage from "../../public/project-one.png";
import Tags from "./ui/Tags.astro";
import Heading from "./ui/Heading.astro";
import Text from "./ui/Text.astro";
import FlexItem from "./ui/FlexItem.astro";

const {data} = Astro.props;

const {
title,
tags,
thumbnail,
description,
demo,
code
} = data;
---

<Container>
  <Flex wrap="wrap" gap="2.8rem">
    <FlexItem flex="2 1 20rem">
      <Image src={thumbnail} height="21.5rem"/>
    </FlexItem>
    
    <FlexItem flex="3 1 45rem">

      <Tags  tags={tags}/>
      <Heading marginBottom="1.8rem">{title}</Heading>
      <Text height="21.4rem">{description}</Text>
      <span class="links">
        <a class="demoLink" href={demo}>Demo</a>
        <a class="codeLink" href={code}>Code</a>
      </span>
  </FlexItem>
  </Flex>
</Container>


<style>
  .links{
  }

  .links a{
      font-size: 1.8rem;
      font-weight: 500;
      text-decoration: none;
      border-radius: 12px;
  }

  .demoLink{
    display: inline-block;
    color: white;
    background-color: var(--color-primary);
    padding: 1.3rem 3.8rem;
    margin-right: 1.1rem;
  }

  .codeLink{
    color: var(--color-primary);
    background-color: white ;
    border: 1px solid var(--color-primary);
    padding: 1.2rem 3.5rem;
  }
</style>